    <span class="token tag"><span class="token tag"><span class="token punctuation">&lt;</span><span class="token namespace">mybatis:</span>scan</span> <span class="token attr-name">base-package</span><span class="token attr-value"><span class="token punctuation">=</span><span class="token punctuation">"</span>top.zhoulis.www.dao<span class="token punctuation">"</span></span><span class="token punctuation">/></span></span>
